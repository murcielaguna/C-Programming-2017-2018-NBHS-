// Test Average Challenge - Calculates the average of five tests by asking for their grades, adding them, then dividing the sum
#include <iostream>
using namespace std;
int main()
{
    double test1, test2, test3, test4, test5, average;
    cout << "Enter the grade of the first test: ";
    cin >> test1;
    cout << "Enter the grade of the second test: ";
    cin >> test2;
    cout << "Enter the grade of the third test: ";
    cin >> test3;
    cout << "Enter the grade of the fourth test: ";
    cin >> test4;
    cout << "Enter the grade of the fifth test: ";
    cin >> test5;
    
    average = (test1 + test2 + test3 + test4 + test5) / 5;
    
    cout << "The final average of all the tests is ";
    cout << average << endl;
return 0;
}
